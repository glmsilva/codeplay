<% if course.errors.any? %>
  <p>Foram encontrados <%= course.errors.count %> erro(s):</p>
  <ul>
    <% course.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: [:admin,course] do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :code %>
  <%= f.text_field :code %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.label :enrollment_deadline %>
  <%= f.date_field :enrollment_deadline %>
  <%= f.label :instructor_id, 'Instrutor(a)' %>
  <%= f.collection_select :instructor_id, instructors, :id, :display_name %>
  <%= f.label :category_id, 'Categoria' %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
  <%= check_box_tag(:status, 'draft') %>
  <%= label_tag(:status, 'Rascunho') %>
  <%= f.label :banner, 'Banner do Curso' %>
  <%= f.file_field :banner %>
  <%= f.submit button_text %>
<% end %>
