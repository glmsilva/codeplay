<% if @inactive_instructors %>
  <% @inactive_instructors.each do |instructor| %>
    <% if instructor.profile_picture.attached? %>
      <%= image_tag instructor.profile_picture %>
    <% end %>
    <%= link_to instructor.name, admin_instructor_path(instructor) %>
    <%= link_to 'Tornar ativo', active_instructor_admin_instructor_path(instructor), method: :post %>
  <% end %>
<%end %>
<%= link_to 'Voltar', root_path %>